<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="Color : "
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:id="@+id/colorTag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Value"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/colorTag"
            android:textStyle="bold|italic"
            android:id="@+id/colorTextview"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Size : "
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_below="@id/colorTag"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:id="@+id/SizeTag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Value"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_below="@id/colorTag"
            android:layout_toRightOf="@id/SizeTag"
            android:textStyle="bold|italic"
            android:id="@+id/SizeTextview"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Price "
            android:textSize="16sp"
            android:layout_below="@+id/SizeTag"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold|italic"
            android:id="@+id/priceTag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Value"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_below="@id/SizeTag"
            android:layout_toRightOf="@id/priceTag"
            android:textStyle="bold|italic"
            android:id="@+id/priceTextview"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>
